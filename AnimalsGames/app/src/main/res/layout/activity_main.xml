<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#9edf99"
    tools:context="com.developer.sangbarca.intentanimals2609.MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageViewGoc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/question"
        android:id="@+id/imageViewNhan"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageViewGoc"
        android:layout_alignStart="@+id/imageViewGoc" />

    <TextView
        android:gravity="center"
        android:textColor="#0700c6"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#cc5a5a"
        android:text="Chọn hình ở dưới"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textViewDiem"
        android:textStyle="bold"
        android:textColor="#f11"
        android:textSize="30sp"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
